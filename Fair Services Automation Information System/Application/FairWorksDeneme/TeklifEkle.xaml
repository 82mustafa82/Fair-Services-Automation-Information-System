                <ComboBoxItem Content="TL" />
            </ComboBox>
            <TextBox FontWeight="Bold" Name="tb6" Grid.Row="6" Grid.Column="1"></TextBox>
            <TextBox FontWeight="Bold" Name="tb7" Grid.Row="7" Grid.Column="1"></TextBox>
            <TextBox FontWeight="Bold" Name="tb8" Grid.Row="8" Grid.Column="1" Grid.RowSpan="4" Margin="0,0,0,23"></TextBox>
            <DatePicker FontWeight="Bold" Name="dp2" Grid.Row="9" Grid.Column="1"></DatePicker>

            <TextBlock Foreground="#770000" FontWeight="Bold" Grid.Row="10" Grid.Column="0">Firmalar :</TextBlock>
            <DatePicker FontWeight="Bold" Name="dp" Grid.Row="0" Grid.Column="1"></DatePicker>
                <TextBox FontWeight="Bold" Name="tb" Grid.Row="1" Grid.Column="1"></TextBox>
                <TextBox FontWeight="Bold" Name="tb2" Grid.Row="2" Grid.Column="1"></TextBox>
            <TextBox FontWeight="Bold" Name="tb3" Grid.Row="3" Grid.Column="1"></TextBox>
            <TextBox FontWeight="Bold" Name="tb4" Grid.Row="4" Grid.Column="1"></TextBox>
